<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/basket_item_layout_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_example_product"/>
        <TextView
            android:id="@+id/basket_item_text_view_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:text="Coca Cola 330ml"/>
        <TextView
            android:id="@+id/basket_item_text_view_product_price"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="5,00"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical">
            <ImageButton
                android:id="@+id/basket_item_image_button_plus"
                android:layout_width="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:src="@mipmap/ic_plus"/>
            <TextView
                android:id="@+id/basket_item_text_view_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="5"/>

            <ImageButton
                android:id="@+id/basket_item_image_button_minus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:src="@mipmap/ic_minus"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>